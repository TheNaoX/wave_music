.theApp
  .notPlayerW
    .headerAndLibraryW
      %header
        %ul
          %li.first
            %a.active{ href:'' } Library
          %li
            %a{ href:'' } Playlists
        .signoutAndFormW
          %a{ href:'' } Sign out
          %form
            %input{ type:'text', placeholder:'Search' }
      %table.libraryTitles
        %tr
          %th
          %th Name
          %th Time
          %th Artist
          %th Album
      %table.library

    .playlistW
      .titles
        %p.name Favorite songs
        %p.hint playlist
      %img{ class:"fn-album", src:'http://cdn.last.fm/flatness/responsive/2/noimage/default_album_300_g4.png' }
      %table#pl-songs-list
  .player
    %p.span

    %input{ class:"previous", type:"button", value:"Previous" }
    %input{ class:"play", type:"button", value:"Play" }
    %input{ class:"pause", type:"button", value:"Pause" }
    %input{ class:"next", type:"button", value:"Next" }
    %audio{ controls:'controls', hidden: true }
      %source{ src: "", type: "audio/mpeg" }

$color_blue: #1A9FC9
$gray_code_9: #999999
$gray_code_c: #cccccc
$gray_code_6: #666666
$gray_code_e6: #E6E6E6
$gray_code_41: #414141
$gray_code_5c: #5C5C5C
$gray_code_ca: #CACACA

body
  background: url('<%= asset_path "body_background.jpg" %>')
  color: $gray_code_c
  font-family: 'Droid Sans', sans-serif
  font-size: 14px
  margin: 0


a
  color: white
  text-decoration: none

.notPlayerW
  overflow: auto

  .headerAndLibraryW
    float: left
    overflow: auto
    width: 67.1%
    header
      margin-top: 25px
      overflow: auto
      ul
        float: left
        margin-left: 3.2%
        overflow: auto
        padding: 0
        .active
          color: $color_blue
        li
          list-style-type: none
          float: left
          font-size: 1.3em
          font-weight: bold
          margin-left: 55px
        .first
          margin-left: 0
      .signoutAndFormW
        float: right
        margin-right: 3.2%
        a
          color: $gray_code_9
          float: right
          font-weight: bold
          &:hover
            color: $gray_code_6
        input
          background-color: $gray_code_e6
          border: none
          color: $gray_code_6
          font-size: 1.1em
          line-height: 22px
          margin-top: 7px
          padding-left: .4em
          height: 22px
          width: 228px

    table.libraryTitles
      border-collapse: collapse
      border-spacing: 0
      margin-left: 3.2%
      margin-top: 22px
      width: 87.8%
      th
        border-bottom: 1px solid $gray_code_41
        text-align: left
    table.library
      border-collapse: collapse
      border-spacing: 0
      margin-left: 3.2%
      width: 87.8%
      tr
        td
          height: 20px
          line-height: 20px
        &.first
          td
            padding-top: 25px
        &.active
          td
            background-color: $gray_code_ca
            color: black
      tbody tr:nth-child(even)
        background-color: $gray_code_41

  .playlistW
    border-left: 1px solid black
    float: right
    width: 32.8%
    .titles
      border-bottom: 1px solid $gray_code_41
      margin-left: 8%
      margin-top: 23px
      overflow: auto
      padding-bottom: 5px
      width: 85%
      p
        display: inline
        margin: 0
        padding: 0
      p.name
        float: left
        font-size: 21px
      p.hint
        float: right
        font-size: 19px
    img
      margin-left: 28.5%
      margin-top: 20px
      width: 42.1%
    table
      border-collapse: collapse
      border-spacing: 0
      margin-left: 8%
      margin-top: 20px
      width: 84.5%
      tr
        td
          height: 28px
          line-height: 38px
        &.active
          td
            background-color: $color_blue
            border-top: 1px solid #1EC7FF
            border-bottom: 1px solid #1EC7FF
      tbody tr:nth-child(even)
        background-color: $gray_code_41

.playerW
  border-top: 1px solid black
  p
    margin-bottom: 17px
    text-align: center
    .data
      color: white
      font-size: 1.3em
    .hint
      font-size: 1em
      padding: 0 .3em
  .advanceLine
    .total
      background-color: black
      height: 5px
      margin-left: 2.65%
      width: 94.7%
    .advance
      background-color: $color_blue
      height: 3px
      margin-left: 2.65%
      margin-top: -4px
      width: 0%
  .controls
    margin: 0 auto
    margin-top: 14px
    width: 147px
    img.prev
      float: left
      margin-top: 34px
    img.next
      float: right
      margin-top: 34px
    img.play
      margin-left: 5px
